{
  "name": "cosmic-plus",
  "version": "0.1.1",
  "description": "The Cosmic.Plus website",
  "author": "MisterTicot",
  "repository": "github:cosmic-plus/webapp-cosmic-plus",
  "license": "MIT",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "get": "git submodule update -i --recursive",
    "prettier": "prettier --write --no-semi 'src/*.js' '*.js' '*.json' '*.md'",
    "eslint": "eslint --fix 'src/*.js' '*.js'",
    "lint": "npm run prettier && npm run eslint",
    "build-js": "webpack -p",
    "build-scss": "node-sass src/index.scss -o web -t compressed",
    "build-css": "npm run build-scss && autoprefixer-cli web/index.css",
    "build-html": "cp -fl src/*.html web",
    "build-misc": "cp -f AUTHORS LICENSE README.md package-lock.json web",
    "build": "sh setenv.sh -p && for i in js css html misc; do npm run build-$i || return; done",
    "rebuild": "npm run get && cp -f web/package-lock.json . && npm ci && npm run build",
    "check": "npm run rebuild && cd web && git status",
    "watch-css": "node-sass src/index.scss -wo web",
    "watch-js": "webpack -d --watch",
    "watch": "npm run watch-css & npm run watch-js",
    "serve": "npm run watch & cd web && live-server --no-browser"
  },
  "devDependencies": {
    "@babel/core": "^7.3.4",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "autoprefixer-cli": "^1.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.4",
    "eslint": "^5.15.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.16.4",
    "raw-loader": "^1.0.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.2.3"
  },
  "dependencies": {
    "@babel/runtime-corejs2": "^7.3.4",
    "@cosmic-plus/domutils": "^2.0.2",
    "@fortawesome/fontawesome-free": "^5.8.1",
    "es6-promise": "^4.2.6",
    "es6-promise-promise": "^1.0.0",
    "normalize.css": "^8.0.1"
  }
}
